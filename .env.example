# WisHub MCP Environment Configuration

# Application
APP_NAME=wishub-mcp
APP_VERSION=0.1.0
APP_ENV=development
DEBUG=true

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Authentication
AUTH_REQUIRED=true
AUTH_HEADER=X-API-Key

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# WisHub Core
WISHUB_CORE_URL=http://localhost:8000
WISHUB_CORE_TIMEOUT=30

# AI Models
OPENAI_API_KEY=
ZHIPU_API_KEY=

# 智谱 API 端点（可选）
# 默认使用智谱的 coding API 端点（与 clawd 配置一致）
# 如果需要使用其他端点，可以修改此配置
ZHIPU_BASE_URL=https://open.bigmodel.cn/api/coding/paas/v4

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
